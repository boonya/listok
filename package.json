{
  "name": "@listock/monorepo",
  "type": "module",
  "version": "1.0.0",
  "license": "GPL-3.0",
  "private": true,
  "author": "Serhii <boonya> Buinytskyi",
  "keywords": ["list", "keep", "notes", "accounting"],
  "repository": "https://github.com/boonya/listock",
  "bugs": "https://github.com/boonya/listock/issues",
  "homepage": "https://github.com/boonya/listock#readme",
  "engines": {
    "npm": "~11.6.2",
    "node": "~24.12.0"
  },
  "workspaces": ["client", "server", "supabase", "msw", "tests"],
  "scripts": {
    "dev": "concurrently -c auto npm:dev:db npm:dev:server npm:dev:client",
    "dev:client": "npm run dev -w client",
    "dev:server": "npm run dev -w server",
    "dev:db": "npm run dev -w supabase",
    "build": "concurrently -c auto npm:build:client npm:build:server",
    "build:client": "npm run build -w client",
    "build:server": "npm run build -w server",
    "check": "biome check",
    "format": "biome check --write",
    "types": "concurrently -c auto npm:types:server npm:types:client",
    "types:client": "npm run -w client types",
    "types:server": "npm run -w server types",
    "test": "concurrently -c auto npm:test:client npm:test:server",
    "test:client": "npm run test -w client",
    "test:server": "npm run test -w server",
    "verify": "concurrently -c auto npm:check npm:test npm:types",
    "db:types": "npm run types -w supabase",
    "db:reset": "npm run reset -w supabase",
    "db:diff": "npm run diff -w supabase"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/node": "^25.0.9",
    "concurrently": "^9.2.1",
    "typescript": "^5.9.3"
  }
}
